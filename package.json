{
  "name": "surveygrill",
  "version": "0.0.1",
  "description": "SurveyGrill amazing surveys builder",
  "main": "src",
  "scripts": {
    "test": "mocha --timeout 1000 || true **/*.test.js ",
    "test-watch": "nodemon --exec 'npm test'",
    "front": "cd front && npm start",
    "server": "export NODE_ENV=dev && nodemon -w src --exec \"babel-node src --presets es2015,stage-0\"",
    "dev": "concurrently --kill-others-on-fail \"npm run server\" \"npm run front\"",
    "lint": "eslint src",
    "clean": "rm -rf dist",
    "build": "babel src -s -D -d dist --presets es2015,stage-0",
    "prestart": "npm run -s build",
    "start": "NODE_ENV=production pm2 start dist"
  },
  "repository": {
    "type": "git",
    "url": "git+ssh://git@github.com/agarhy/surveygrill.git"
  },
  "author": "Ahmed Garhy (garhy.ahmed@gmail.com)",
  "license": "ISC",
  "bugs": {
    "url": "https://github.com/agarhy/surveygrill/issues"
  },
  "homepage": "https://github.com/agarhy/surveygrill#readme",
  "eslintConfig": {
    "parserOptions": {
      "ecmaVersion": 7,
      "sourceType": "module"
    },
    "env": {
      "node": true
    },
    "rules": {
      "no-console": 0,
      "no-unused-vars": 1
    }
  },
  "dependencies": {
    "body-parser": "^1.18.2",
    "config": "^1.30.0",
    "express": "^4.16.3",
    "mongoose": "^5.0.16"
  },
  "devDependencies": {
    "concurrently": "^3.5.1",
    "babel-core": "^6.26.0",
    "babel-eslint": "^8.2.3",
    "babel-preset-es2015": "^6.24.1",
    "babel-preset-react": "^6.24.1",
    "babel-preset-stage-0": "^6.24.1",
    "babel-register": "^6.26.0",
    "chai": "^4.1.2",
    "eslint": "^4.19.1",
    "expect": "^1.20.2",
    "mocha": "^3.0.0  ",
    "rewire": "^4.0.1",
    "sinon": "^4.5.0",
    "sinon-mongoose": "^2.1.1",
    "supertest": "^2.0.0"
  }
}
